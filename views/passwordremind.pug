extends layout
block content
    div.container
      .row.justify-content-center
        .col-md-6
            h1.my-5.text-center Recordar Contraseña
            if (error)
                .my-5.text-center.text-danger #{error}
            form(action='/passwordremind', method='POST').form-group.mt-3
                .mb-3.row.align-items-center
                    label.form-label.col-sm-4(for='email') Tu correo electronico: 
                    .col-sm-8
                        input#email.form-control(type='email' name='email' maxlength="45" required)
                .mb-3.row.align-items-center
                    .col-sm-8.offset-sm-4
                        button.btn.btn-primary.px-4.py-2.ms-5(type='submit') Recordar contraseña