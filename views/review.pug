.carousel.carousel-dark.slide.mb-5(data-bs-ride='carousel', id='userReviewsCarousel')
  .carousel-inner
    .carousel-item.active
      .container
        .row.justify-content-center
            - var i = 0;
            while i < 3                
                .col-lg-3.col-md-3
                    .card
                        .card-body
                            h5.card-title #{reviews[i].userReview}
                            p.card-text #{reviews[i].bodyReview}
                            p.card-text.text-muted #{reviews[i].starsReview}
                - i++
    .carousel-item
      .container
        .row.justify-content-center
            - var i = 3;
            while i < reviews.length
                .col-lg-3.col-md-3
                    .card
                        .card-body
                            h5.card-title #{reviews[i].userReview}
                            p.card-text #{reviews[i].bodyReview}
                            p.card-text.text-muted #{reviews[i].starsReview}  
                - i++                                     
  button.carousel-control-prev(type='button', data-bs-target='#userReviewsCarousel', data-bs-slide='prev')
    span.carousel-control-prev-icon
    span.visually-hidden Previous
  button.carousel-control-next(type='button', data-bs-target='#userReviewsCarousel', data-bs-slide='next')
    span.carousel-control-next-icon
    span.visually-hidden Next



