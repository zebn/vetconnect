extends layout
block content
    div.container
      .row.justify-content-center
        .col-md-6
            h1.my-5.text-center Formulario de Registro
            if (error)
                .my-5.text-center.text-danger #{error}
            form(action='/passwordchange', method='POST').form-group.mt-3
                .mb-3.row.align-items-center
                    label.labels(label-for='newPassword') Nueva contraseña
                    input#newPassword.form-control(type='password', name='newPassword', required)
                .mb-3.row.align-items-center
                    label.labels(label-for='confirmPassword') Confirmar nueva contraseña
                    input#confirmPassword.form-control(type='password', name='confirmPassword', required)
                .mt-3.text-center
                    button.btn.btn-primary.profile-button(type='submit') Cambiar contraseña   