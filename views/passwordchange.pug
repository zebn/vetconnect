extends layout
block content
    div.container
        .row.justify-content-center
            .col-md-6
                h1.my-5.text-center Cambiar Contraseña
                if (result=="success")
                    .mb-2.text-center.text-success La contraseña ha sido cambiada
                if (result=="notsame") 
                    .mb-2.text-center.text-danger Contraseñas no coinciden
                if (result=="notexist") 
                    .mb-2.text-center.text-danger Contraseña no existe
                form(action='/passwordchange', method='POST').form-group.mt-3
                    .mb-3.row.align-items-center
                        label.form-label.col-sm-4(label-for='newPassword') Nueva contraseña:
                        .col-sm-8
                            input#newPassword.form-control(type='password', name='newPassword',pattern="^[A-Za-z0-9_*+?@$!*?&]+$" title="Ingresa letras (mayúsculas y minúsculas), números o los símbolos especiales _+?@$!*?&.", required)
                    .mb-3.row.align-items-center
                        label.form-label.col-sm-4(label-for='confirmPassword') Confirmar contraseña:
                        .col-sm-8
                            input#confirmPassword.form-control(type='password', name='confirmPassword', required)
                    .mt-3.text-center
                        .col-sm-8.offset-sm-4.mb-3
                            button.btn.btn-primary.profile-button(type='submit') Cambiar contraseña   