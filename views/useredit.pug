extends layout
block content
    div.container
      .row.justify-content-center
        .col-md-6
            h1.my-5.text-center Editar Usuario
            form(action='/admin/users/edit/'+userInfo.idUser method='post')
                .mb-3.row.align-items-center
                    label.form-label.col-sm-4(for='id') ID: 
                    .col-sm-8
                        input#id.form-control(type='text' name='id' disabled value = userInfo.idUser)
                .mb-3.row.align-items-center
                    label.form-label.col-sm-4(for='username') Email:
                    .col-sm-8
                        input#username.form-control(type='email' name='username' maxlength="45" value = userInfo.username)
                .mb-3.row.align-items-center
                    label.form-label.col-sm-4(for='name') Nombre:
                    .col-sm-8
                        input#name.form-control(type='text' name='name' maxlength="45" value = userInfo.name)
                .mb-3.row.align-items-center
                    label.form-label.col-sm-4(for='familiarName') Nombre de mascota:
                    .col-sm-8
                        input#familiarName.form-control(type='text' name='familiarName' maxlength="45" value = userInfo.familiarName)
                .mb-3.row.align-items-center
                    label.form-label.col-sm-4(for='familiarType') Tipo de mascota:
                    .col-sm-8
                        input#familiarType.form-control(type='text' name='familiarType' maxlength="45" value = userInfo.familiarType)
                .mb-3.row.align-items-center
                    label.form-label.col-sm-4(for='role') Rol: 
                    .col-sm-8
                        select#role.form-select(name='role' aria-label='Elige una opción')                            
                            option(value='1', selected=userInfo.idRole == 1) Admin
                            option(value='2', selected=userInfo.idRole == 2) Usuario
                .mb-3.row.align-items-center
                    label.form-label.col-sm-4(for='isActive') Estado: 
                    .col-sm-8
                        select#isActive.form-select(name='isActive' aria-label='Elige una opción')                            
                            option(value='1', selected=userInfo.isActive == 1) Activo
                            option(value='2', selected=userInfo.isActive == 2) Inactivo           
                .mb-3.row.align-items-center
                    .col-sm-8.offset-sm-4
                        button.btn.btn-success.px-4.py-2.ms-5(type='submit') Enviar