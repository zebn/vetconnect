extends layout

block content
    div.container
      .row.justify-content-center
        .col-md-6
            h1.my-5.text-center Formulario para Veterinarios
            if (result)
                if(result=="Error en captcha")
                    .my-5.text-center.text-danger #{result}
                else
                    .my-5.text-center.text-success #{result}
            form(action='/contact' method='POST' enctype="multipart/form-data")
                .mb-3.row.align-items-center
                    label.form-label.col-sm-4(for='email') *Email: 
                    .col-sm-8
                        input#username.form-control(type='email' name='email' maxlength="45" required)
                .mb-3.row.align-items-center
                    label.form-label.col-sm-4(for='telnumber') *Teléfono:
                    .col-sm-8
                        input#tel-number.form-control(type='text' name='telnumber' maxlength="15" pattern="^[0-9]+$" title ="Ingresa números" required)
                .mb-3.row.align-items-center
                    label.form-label.col-sm-4(for='info') Información adicional: 
                    .col-sm-8
                        textarea#info.form-control(rows='3' maxlength="255")
                .mb-5.row.align-items-center
                    label.form-label.col-sm-4(for='cv') Añadir CV: 
                    .col-sm-8
                        input#cv.form-control(name='cv' type='file' accept='application/pdf')
                .mb-3.row.align-items-center
                    .col-sm-8.offset-sm-4
                        p !{captcha}
                        button.btn.btn-primary.px-4.py-2.ms-5(type='submit') Enviar
        .mb-3.row.align-items-center
            .col-sm-8.offset-sm-4
                span.me-5.float-end Los campos con (*) son obligatorios.  