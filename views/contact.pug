extends layout

block content
    div.container
      .row.justify-content-center
        .col-md-6
            h1.my-5 Formulario de Contacto para Veterinarios
            form(action='/contact' method='post')
                .mb-3.row.align-items-center
                    label.form-label.col-sm-4(for='username') *Email: 
                    .col-sm-8
                        input#username.form-control(type='email' name='username' maxlength="45" required)
                .mb-3.row.align-items-center
                    label.form-label.col-sm-4(for='tel-number') *Teléfono:
                    .col-sm-8
                        input#tel-number.form-control(type='tel' name='tel-number' required)
                .mb-3.row.align-items-center
                    label.form-label.col-sm-4(for='info') Información adicional: 
                    .col-sm-8
                        textarea#info.form-control(rows='3' maxlength="255")
                .mb-5.row.align-items-center
                    label.form-label.col-sm-4(for='cv') Añadir CV: 
                    .col-sm-8
                        input(name='cv' type='file' accept='application/pdf')
                .mb-3.row.align-items-center
                    .col-sm-8.offset-sm-4
                        button.btn.btn-primary.px-4.py-2.ms-5(type='submit') Enviar
    span.float-end.me-5 Los campos con (*) son obligatorios.
            